{
  "compilerOptions": {
    "strict": true
  },
  "importMap": "./import_map.json",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch main.ts"
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "indentWidth": 2,
      "singleQuote": false
    }
  },
  "test": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    }
  }
}
